{
  "name": "linter-proselint",
  "version": "3.3.0",
  "private": true,
  "description": "A plugin for Atom Linter providing an interface to proselint.",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AtomLinter/linter-proselint.git"
  },
  "engines": {
    "atom": ">=1.8.0 <2.0.0"
  },
  "configSchema": {
    "enabledScopes": {
      "description": "List of scopes to run proselint on, run `Editor: Log Cursor Scope` to determine the scopes for a file.",
      "type": "array",
      "default": [
        "source.gfm",
        "source.pfm",
        "source.md",
        "text.plain",
        "text.tex.latex",
        "text.tex.latex.beamer",
        "text.tex.latex.memoir",
        "source.asciidoc",
        "text.restructuredtext"
      ],
      "items": {
        "type": "string"
      }
    }
  },
  "keywords": [
    "lint",
    "proselint"
  ],
  "author": {
    "name": "Clay Miller",
    "email": "clay@smockle.com",
    "url": "https://smockle.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AtomLinter/linter-proselint/issues"
  },
  "homepage": "https://github.com/AtomLinter/linter-proselint#readme",
  "dependencies": {
    "atom-linter": "10.0.0",
    "atom-package-deps": "5.0.0"
  },
  "package-deps": [
    "linter:2.0.0"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "scripts": {
    "lint": "eslint ."
  },
  "devDependencies": {
    "eslint": "5.15.1",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.16.0",
    "jasmine-fix": "1.3.1"
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "semanticCommits": true,
    "rangeStrategy": "pin",
    "packageRules": [
      {
        "packagePatterns": [
          "^eslint"
        ],
        "groupName": "ESLint packages"
      }
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true,
      "browser": true
    }
  }
}
